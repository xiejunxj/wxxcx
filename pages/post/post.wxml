<!--pages/post/post.wxml-->
<view>
    <swiper vertical="{{false}}" indicator-dots="true" autoplay="true" interval="5000">
        <swiper-item>
            <image class="avatar" src="http://124.221.215.40/avatar/icon.png"/>
        </swiper-item>
        <swiper-item>
            <image class="avatar" src="http://124.221.215.40/avatar/automan.png"/>
        </swiper-item>
        <swiper-item>
            <image class="avatar" src="http://124.221.215.40/avatar/icon5.jpg"/>
        </swiper-item>
    </swiper>
    <block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx" wx:key="*this">
        <view class="post-container">
            <view class = "post-author-date">
                <image src="{{item.avatar}}"></image>
                <text>{{item.date}}</text>
            </view>
            <text class="post-title">{{item.title}}</text>
            <image class="post-image" mode="aspectFill" src="{{item.postImg}}"></image>
            <text class="post-content">{{item.content}}</text>
            <view class="post-like">
                <image src="http://124.221.215.40/icon/wx_app_collect.png"></image>
                <text>{{item.collectionNum.array[0]}}</text>
                <image src="http://124.221.215.40/icon/wx_app_view.png"></image>
                <text>{{item.readingNum}}</text>
                <image src="http://124.221.215.40/icon/wx_app_message.png"></image>
                <text>{{item.commentNum}}</text>
            </view>
        </view>
    </block>
</view>