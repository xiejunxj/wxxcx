.container{
    display: flex;
    flex-direction: column;
}
.head-img{
    width: 100%;
    height: 320rpx;
    margin-top: 100rpx;
}
.head-img-hover{
    width: 100%;
    height: 320rpx;
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    flex-direction: column;
}
.main-title {
    font-size: 60rpx;
    color: #2158cf;
    font-weight: bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
}
.sub-title{
    display: flex;
    flex-direction: row;
    margin-top: 30rpx;
    margin-left: 40rpx;
    align-items: center;
}
.sub-title-country{
    font-size: 22rpx;
    color: #2158cf;
    margin-right: 10rpx;
}
.sub-title-rt{
    font-size: 22rpx;
    color: #2158cf;
    margin-right: 30rpx;
}

.like-row{
    display: flex;
    flex-direction: row;
    margin-top: 10rpx;
    margin-left: 40rpx;
    align-items: center;
}
.highlight-font{
    color: #f21146;
    font-size: 22rpx;
    margin-right: 10rpx;
}
.plain-font{
    color: #666;
    font-size: 22rpx;
    margin-right: 30rpx;
}

.movie-img{
    height: 238rpx;
    width: 175rpx;
    position: absolute;
    top:160rpx;
    right: 30rpx;
}

.summary{
    margin-left: 40rpx;
    margin-top: 40rpx;
    color: #777777;
}
.flex-row{
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.mark {
    margin-right: 30rpx;
    white-space: nowrap;
    color: #999999;
}
.synosis{
    margin-left: 40rpx;
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
}

.synosis-font {
    color: #999;
}
.summary-content{
    margin-top:20rpx;
    margin-right: 40rpx;
    line-height: 40rpx;
    letter-spacing: 1px;
}