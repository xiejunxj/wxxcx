<view class="container">
    <view class="head-img-hover">
        <text class="main-title">{{movie.title}}</text>
        <view class="sub-title">
        <text class="sub-title-country">{{movie.country}}</text>
        <text class="sub-title-rt">{{movie.rt}}</text>
        </view>
        <view class="like-row">
            <text class="highlight-font">
                {{movie.wishCount}}
            </text>
            <text class="plain-font">
                人想看
            </text>
            <text class="highlight-font">
                {{movie.loveCount}}
            </text>
            <text class="plain-font">
                人看过
            </text>
        </view>
    </view>
    <image class="head-img" src="{{movie.headImg}}" mode="aspectFill"/>
    <view class="summary">
        <view class="flex-row">
            <text class="mark">导演</text>
            <text>{{movie.director}}</text>
            <text class="mark">影人</text>
            <text>{{movie.casts}}</text>
            <text class="mark">类型</text>
            <text>{{movie.cat}}</text>
        </view>
        <view class="synosis">
            <text class="synosis-font">剧情简介</text>
            <text class="summary-content">{{movie.summary}}</text>
        </view>
    </view>
</view>
